<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BaseBullet">
    <defName>MOW_Bullet_EMMarksmanRifle</defName>
    <label>EM marksman rifle bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_EMMarksmanRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>15</damageAmountBase>
	  <armorPenetrationBase>0.60</armorPenetrationBase>
      <stoppingPower>1.5</stoppingPower>
      <speed>120</speed>
	  <extraDamages>
	    <li>
          <def>EMP</def>
          <amount>8</amount>
        </li>
	  </extraDamages>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>MOW_Gun_EMMarksmanRifle</defName>
    <label>EM marksman rifle</label>
    <description>A marksman rifle relying on a set of electromagnetic rails for projectile acceleration. electromagnetic weaponry exchanges raw damage for armour penetration and reliability, on top of supercharging its shots with an electromagnetic payload.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/EMMarksmanRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.14</drawSize>
    </graphicData>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <statBases>
      <MarketValue>1400</MarketValue>
	  <WorkToMake>45000</WorkToMake>
      <Mass>3</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.85</AccuracyMedium>
      <AccuracyLong>0.85</AccuracyLong>
      <RangedWeapon_Cooldown>0.5</RangedWeapon_Cooldown>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Plasteel>60</Plasteel>
      <ComponentSpacer>4</ComponentSpacer>
    </costList>
    <weaponTags>
      <li>SpacerGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>MOW_Bullet_EMMarksmanRifle</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>39.9</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>MOW_Shot_EMMarksmanRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>