<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Particle Launcher -->
  <ThingDef ParentName="BaseBullet">
    <defName>MOW_Bullet_ParticleLauncher</defName>
    <label>particle launcher shell</label>
    <graphicData>
      <texPath>Things/Projectile/Projectile_ParticleLauncher</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>2</drawSize>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
      <damageAmountBase>25</damageAmountBase>
      <speed>60</speed>
      <explosionRadius>2.9</explosionRadius >
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseGunWithQuality">
    <defName>MOW_Gun_ParticleLauncher</defName>
    <label>particle launcher</label>
    <description>An explosive mini-artillery device. Fires a warhead containing unstable particles that detonate upon impact.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/ParticleLauncher</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.2</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>1800</MarketValue>
      <Mass>18</Mass>
      <RangedWeapon_Cooldown>4</RangedWeapon_Cooldown>
    </statBases>
    <techLevel>Spacer</techLevel>
    <generateCommonality>0.5</generateCommonality>
    <tradeability>None</tradeability>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11.7</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
    </tools>
    <relicChance>0</relicChance>
    <destroyOnDrop>true</destroyOnDrop>
    <weaponTags>
      <li>MOW_MechanoidGunExplosive</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>MOW_Bullet_ParticleLauncher</defaultProjectile>
        <forcedMissRadius>3.5</forcedMissRadius>
        <ai_AvoidFriendlyFireRadius>4</ai_AvoidFriendlyFireRadius>
        <warmupTime>1.75</warmupTime>
        <range>29.9</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>InfernoCannon_Fire</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>

  <!-- Storm Charge Scatter -->
  <ThingDef ParentName="BaseBullet">
    <defName>MOW_Bullet_StormChargeScatter</defName>
    <label>charge scatter blast</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_StormChargeScatter</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>18</damageAmountBase>
	  <armorPenetrationBase>0.45</armorPenetrationBase>
      <stoppingPower>3</stoppingPower>
      <speed>60</speed>
	</projectile>
  </ThingDef>

  <ThingDef ParentName="BaseGunWithQuality">
    <defName>MOW_Gun_StormChargeScatter</defName>
    <label>storm charge scatter</label>
    <description>A short-range weapon used by mechanoids. Equipped with axe head bayonet, it can serve in equal measure as a melee weapon and devastating chain shotgun.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/StormChargeScatter</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.1</drawSize>
    </graphicData>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <relicChance>0</relicChance>
    <statBases>
      <MarketValue>1600</MarketValue>
	  <Mass>4.6</Mass>
      <AccuracyTouch>0.57</AccuracyTouch>
      <AccuracyShort>0.64</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.45</AccuracyLong>
      <RangedWeapon_Cooldown>1.4</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>MOW_MechanoidGunBreach</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>MOW_Bullet_StormChargeScatter</defaultProjectile>
        <warmupTime>1.2</warmupTime>
        <range>11.9</range>
		<burstShotCount>3</burstShotCount>
		<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <soundCast>MOW_Shot_StormChargeScatter</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>axe bayonet</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>14</power>
        <cooldownTime>1.5</cooldownTime>
		<armorPenetration>0.4</armorPenetration>
      </li>
	  <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <!-- Shockwave Cannon -->
  <ThingDef ParentName="BaseBullet">
    <defName>MOW_Bullet_ShockaveCannon</defName>
    <label>shockwave blast</label>
    <graphicData>
      <texPath>Things/Projectile/Projectile_ShockaveCannon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>MOW_Shockwave</damageDef>
      <damageAmountBase>8</damageAmountBase>
	  <armorPenetrationBase>0.11</armorPenetrationBase>
      <stoppingPower>3</stoppingPower>
      <speed>120</speed>
	  <extraDamages>
	    <li>
          <def>Stun</def>
          <amount>4</amount>
		  <chance>0.5</chance>
        </li>
	  </extraDamages>
	</projectile>
  </ThingDef>

  <ThingDef ParentName="BaseGunWithQuality">
    <defName>MOW_Gun_ShockaveCannon</defName>
    <label>shockwave cannon</label>
    <description>A sonic cannon used primarily for non-lethal suppression. The sheer impact force of the cannon's shockwave frequently leaves its target dazed for a short while.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/ShockaveCannon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <relicChance>0</relicChance>
    <statBases>
      <MarketValue>1200</MarketValue>
	  <Mass>4.6</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.90</AccuracyShort>
      <AccuracyMedium>0.80</AccuracyMedium>
      <AccuracyLong>0.65</AccuracyLong>
      <RangedWeapon_Cooldown>4</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>MOW_MechanoidGunSonic</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>MOW_Bullet_ShockaveCannon</defaultProjectile>
        <warmupTime>1.6</warmupTime>
        <range>25.9</range>
		<burstShotCount>1</burstShotCount>
        <soundCast>MOW_Shot_ShockwaveCannon</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
	  <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <!-- Needler -->
  <ThingDef ParentName="BaseGun" Name="NeedleGunBase">
    <defName>MOW_Gun_Needler</defName>
    <label>needler</label>
    <description>A triple-barreled, burst fire cousin of mechanoid needle gun. While it retains the range of its single-shot cousin, the recoil of continous fire make it ill-suited for sniping, instead being used for long-distance target supression.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/Needler</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <relicChance>0</relicChance>
    <statBases>
      <MarketValue>1800</MarketValue>
      <Mass>4</Mass>
      <AccuracyTouch>0.30</AccuracyTouch>
      <AccuracyShort>0.50</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.55</AccuracyLong>
      <RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>MOW_MechanoidGunLongRange</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedHeavy</li>
      <li>LongShots</li>
    </weaponClasses>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_NeedleGun</defaultProjectile>
        <warmupTime>2.8</warmupTime>
        <range>44.9</range>
		<burstShotCount>3</burstShotCount>
        <soundCast>Shot_NeedleGun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2.8</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <!-- Charge Howitzer -->
  <ThingDef ParentName="BaseBullet">
    <defName>MOW_Bullet_Shell_ChargeHowitzer</defName>
    <label>charge shell</label>
    <graphicData>
      <texPath>Things/Projectile/Shell_ChargeHowitzer</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>2</drawSize>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <speed>50</speed>
      <damageDef>Bomb</damageDef>
	  <flyOverhead>true</flyOverhead>
	  <damageAmountBase>30</damageAmountBase>
      <explosionRadius>2.9</explosionRadius>
      <ai_IsIncendiary>true</ai_IsIncendiary>
	  <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>
  
  <ThingDef ParentName="BaseArtilleryWeapon">
    <defName>MOW_Artillery_ChargeHowitzer</defName>
    <label>charge howitzer</label>
    <description>A relatively short-range artillery piece typically found mounted on Bombardier mechanoids. Internal fabricator, autoloader and targetting AI allow it to lob charge shells completely independently to its carrier. Its magnetic acceleration rails make fired projectiles somewhat faster and more accurate than those shot out of regular mortars.</description>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <graphicData>
      <texPath>Things/Building/Security/ChargeHowitzer</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <Mass>26</Mass>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <defaultProjectile>MOW_Bullet_Shell_ChargeHowitzer</defaultProjectile>
        <minRange>7.9</minRange>
        <range>49.9</range>
		<forcedMissRadius>7</forcedMissRadius>
        <ai_AvoidFriendlyFireRadius>3</ai_AvoidFriendlyFireRadius>
		<defaultCooldownTime>4</defaultCooldownTime>
        <soundCast>MOW_Shot_ChargeHowitzer</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
		<requireLineOfSight>false</requireLineOfSight>
        <linkedBodyPartsGroup>BulbTurret</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
		<ticksBetweenBurstShots>600</ticksBetweenBurstShots>
		<targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
  </ThingDef>
  
</Defs>