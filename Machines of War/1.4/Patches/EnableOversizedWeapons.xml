<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Enable Oversized Weapons</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "MOW_Gun_ParticleLauncher"]</xpath>
					<value>
                        <drawOffsetSouth>(-0.4, 0.0, -0.4)</drawOffsetSouth>
                        <drawOffsetWest>(-0.3, 0.0, -0.3)</drawOffsetWest>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "MOW_Gun_ShockaveCannon"]</xpath>
					<value>
                        <drawSize>1.1</drawSize>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>